<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/simple_margin"
            android:layout_marginEnd="@dimen/double_margin"
            android:layout_marginStart="@dimen/double_margin"
            android:layout_marginTop="@dimen/double_margin">

            <TextView
                android:id="@+id/ba_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfheavy"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/primary_title_text_size"
                tools:text="PLAYBULB CANDLE" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/primaryText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/simple_margin"
            android:layout_marginEnd="@dimen/double_margin"
            android:layout_marginStart="@dimen/double_margin"
            android:layout_marginTop="@dimen/simple_margin"
            android:fontFamily="@font/sfbold"
            android:text="@string/effects"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/title_text_size" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginStart="@dimen/simple_margin"
            android:layout_marginEnd="@dimen/simple_margin"
            android:id="@+id/ba_effects_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/ba_effects_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginEnd="@dimen/simple_margin"
            android:layout_marginStart="@dimen/simple_margin"
            android:background="@color/dividersLinesColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/simple_margin"
            android:layout_marginEnd="@dimen/double_margin"
            android:layout_marginStart="@dimen/double_margin"
            android:layout_marginTop="@dimen/double_margin"
            android:fontFamily="@font/sfbold"
            android:text="@string/settings"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/title_text_size" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginStart="@dimen/simple_margin"
            android:layout_marginEnd="@dimen/simple_margin"
            android:layout_marginBottom="@dimen/double_margin"
            android:id="@+id/ba_colors_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
