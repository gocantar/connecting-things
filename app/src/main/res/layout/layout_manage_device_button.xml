<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ma_manage_devices_layout"
    android:layout_width="210dp"
    android:layout_height="60dp"
    android:layout_marginBottom="@dimen/simple_margin"
    android:layout_marginEnd="@dimen/double_margin"
    android:layout_marginStart="@dimen/double_margin"
    android:background="@drawable/bg_rectangle_with_stroke">

    <ImageView
        android:id="@+id/ma_device_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/double_margin"
        android:layout_marginTop="@dimen/simple_margin"
        android:layout_marginBottom="@dimen/simple_margin"
        android:background="@drawable/ic_oval"
        android:backgroundTint="#3B5998"
        android:padding="@dimen/simple_padding"
        app:srcCompat="@drawable/ic_bluetooth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/ma_device_icon"
        android:padding="@dimen/double_padding"
        android:text="@string/connect_disconnect_message"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/regular_text_size" />

</RelativeLayout>
